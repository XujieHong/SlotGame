<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:weightSum="6"
    android:id="@+id/game_panel"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit01"
            android:id="@+id/image01"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit02"
            android:id="@+id/image02"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit03"
            android:id="@+id/image03"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit04"
            android:id="@+id/image04"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit05"
            android:id="@+id/image05"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit06"
            android:id="@+id/image06"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit07"
            android:id="@+id/image07"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit24"
                android:id="@+id/image24"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit23"
                android:id="@+id/image23"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit22"
                android:id="@+id/image22"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit21"
                android:id="@+id/image21"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit20"
                android:id="@+id/image20"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="5"
            android:orientation="vertical">
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit08"
                android:id="@+id/image08"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit09"
                android:id="@+id/image09"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit10"
                android:id="@+id/image10"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit11"
                android:id="@+id/image11"/>
            <ImageView
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:src="@drawable/fruit12"
                android:id="@+id/image12"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit19"
            android:id="@+id/image19"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit18"
            android:id="@+id/image18"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit17"
            android:id="@+id/image17"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit16"
            android:id="@+id/image16"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit15"
            android:id="@+id/image15"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit14"
            android:id="@+id/image14"/>
        <ImageView
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/fruit13"
            android:id="@+id/image13"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/dummy_button"
            style="@style/Base.Widget.AppCompat.ActionButton"
            android:layout_width="116dp"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:background="#9a8ca1"
            android:onClick="startGame"
            android:text="@string/start_button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="80dp"
            android:text="@string/coins"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="0"
            android:textSize="30dp" />
    </RelativeLayout>
</LinearLayout>